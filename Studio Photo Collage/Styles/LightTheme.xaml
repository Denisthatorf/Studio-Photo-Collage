<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


        <SolidColorBrush x:Key="MainBackgroundColor" Opacity="0.8">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="PopUpsBackground" Opacity="0.9">#ffffff</SolidColorBrush>


    <SolidColorBrush x:Key="ContentDialogDimmingThemeBrush" Color="Transparent" />
        <SolidColorBrush x:Key="SystemControlPageBackgroundMediumAltMediumBrush" Color="Transparent" />
        <StaticResource x:Key="ContentDialogLightDismissOverlayBackground" ResourceKey="SystemControlPageBackgroundMediumAltMediumBrush" />

        <SolidColorBrush x:Key="BlackAndWhite" Color="Black"/>
    <SolidColorBrush x:Key="NoBtnPopUpBtnBrush" Color="#383838"/>

    <Style TargetType="StackPanel" BasedOn="{StaticResource SidePanelStackPanel}" x:Key="SidePanelPopUp">
        <Setter Property="Background" Value="{ThemeResource MainBackgroundColor}"/>
    </Style>
</ResourceDictionary>
