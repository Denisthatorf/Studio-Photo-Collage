                                       IsTabStop="False" Maximum="{TemplateBinding ScrollableHeight}"
                                       Orientation="Vertical" Value="{TemplateBinding VerticalOffset}" ViewportSize="{TemplateBinding ViewportHeight}" 
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            
                            <ScrollBar x:Name="HorizontalScrollBar" Width="4" MinWidth="4"
