                                        <DoubleAnimation Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalPanningRoot" To="0" Storyboard.TargetProperty="Opacity"/>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HorizontalPanningRoot" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="{ThemeResource ScrollBarContractDuration}">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="VerticalPanningRoot" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="{ThemeResource ScrollBarContractDuration}">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ConsciousStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition From="Expanded" To="Collapsed">
                                        <Storyboard>
                                            <ColorAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="HorizontalThumb" To="{ThemeResource ScrollBarPanningThumbBackgroundColor}" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                            <ColorAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalThumb" To="{ThemeResource ScrollBarPanningThumbBackgroundColor}" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalThumbTransform" To="{ThemeResource SmallScrollThumbScale}" Storyboard.TargetProperty="ScaleX"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalThumbTransform" To="{ThemeResource SmallScrollThumbOffset}" Storyboard.TargetProperty="TranslateX"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="HorizontalThumbTransform" To="{ThemeResource SmallScrollThumbScale}" Storyboard.TargetProperty="ScaleY"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="HorizontalThumbTransform" To="{ThemeResource SmallScrollThumbOffset}" Storyboard.TargetProperty="TranslateY"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalSmallIncrease" To="0" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalLargeIncrease" To="0" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalLargeDecrease" To="0" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalSmallDecrease" To="0" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="VerticalTrackRect" To="0" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="HorizontalSmallIncrease" To="0" Storyboard.TargetProperty="Opacity"/>
                                            <DoubleAnimation BeginTime="{ThemeResource ScrollBarContractBeginTime}" Duration="{ThemeResource ScrollBarContractDuration}" Storyboard.TargetName="HorizontalLargeIncrease" To="0" Storyboard.TargetProperty="Opacity"/>
