<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Windows10version1903="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 8)">


        <SolidColorBrush x:Key="MainBackgroundColor" Opacity="0.8">#1f1f1f</SolidColorBrush>
        <SolidColorBrush x:Key="PopUpsBackground" Opacity="0.9">#1f1f1f</SolidColorBrush>

        <SolidColorBrush x:Key="ContentDialogDimmingThemeBrush" Color="Transparent" />
        <SolidColorBrush x:Key="SystemControlPageBackgroundMediumAltMediumBrush" Color="Transparent" />
        <StaticResource x:Key="ContentDialogLightDismissOverlayBackground" ResourceKey="SystemControlPageBackgroundMediumAltMediumBrush" />

        <SolidColorBrush x:Key="BlackAndWhite" Color="White"/>
    <SolidColorBrush x:Key="NoBtnPopUpBtnBrush" Color="#535250"/>
    
    <Style TargetType="StackPanel" BasedOn="{StaticResource SidePanelStackPanel}" x:Key="SidePanelPopUp">
        <Setter Property="Background" Value="{ThemeResource MainBackgroundColor}"/>
    </Style>
</ResourceDictionary>
