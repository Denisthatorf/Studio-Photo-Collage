<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBackgroundColor" Opacity="0.8">#1f1f1f</SolidColorBrush>
    <SolidColorBrush x:Key="PopUpsBackground" Opacity="0.9">#1f1f1f</SolidColorBrush>

    <SolidColorBrush x:Key="BlackInLightAndWhiteInDark" Color="White"/>
    <SolidColorBrush x:Key="WhiteInLightAndBlackInDark" Color="Black"/>

    <SolidColorBrush x:Key="NoConfirmPopUpBtnBrush" Color="#535250"/>
    
    <Style TargetType="StackPanel" BasedOn="{StaticResource SidePanelStackPanel}" x:Key="SidePanelPopUp">
        <Setter Property="Background" Value="{ThemeResource MainBackgroundColor}"/>
    </Style>
</ResourceDictionary>
