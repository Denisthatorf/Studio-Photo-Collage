<Page
    x:Class="Studio_Photo_Collage.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studio_Photo_Collage.Views"
    xmlns:infstruct="using:Studio_Photo_Collage.Infrastructure"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding MainPageInstance, Source={StaticResource Locator}}"
    MinHeight="400" RequestedTheme="Light">
    <Page.Resources>
        <infstruct:StringToTypeOfPageConverter x:Key="StringToTypeOfPageConverter"/>
        <Style TargetType="AppBarButton">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <!--ExpandedModeThresholdWidth="200000"
        IsPaneToggleButtonVisible="False"-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Background="#EDF1F2">
            <AppBarButton>
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF61B;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton>
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE838;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton>
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton>
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE749;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton>
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74E;"/>
                </AppBarButton.Icon>
            </AppBarButton>
        </StackPanel>
        <AppBarButton Icon="Setting" Grid.Row="1" VerticalAlignment="Bottom"
                          Command="{Binding SettingsCommand}"/>

        <Grid Grid.ColumnSpan="2" Background="#EDF1F2">
            <muxc:NavigationView x:Name="TopNavigation" IsSettingsVisible="False" 
            IsBackButtonVisible="Collapsed" PaneDisplayMode="Top" HorizontalAlignment="Center">
                <muxc:NavigationView.MenuItems>
                    <muxc:NavigationViewItem Tag="Templates">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE80A;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Transform">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEB9F;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Frames">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B3;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Filters">
                        <muxc:NavigationViewItem.Icon>
                            <muxc:ImageIcon Source="/Assets/wand.png"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Background">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B9;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE722;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem x:Name="PaintNavItem">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEDC6;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                </muxc:NavigationView.MenuItems>
            </muxc:NavigationView>

        </Grid>
        
        <Grid Grid.Row="1" Grid.Column="1" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Popup  Grid.Column="1" IsOpen="True" 
                    Width="250"
                    Height="{Binding ElementName=MainGrid, Path=Height}">
                <Frame Content="{Binding ElementName=TopNavigation, Path=SelectedItem, 
                    Converter={StaticResource StringToTypeOfPageConverter}}"/>
            </Popup>

            <Popup Grid.ColumnSpan="2" IsOpen="{Binding IsSettingsOpen}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Width="280" Height="350">
                <Frame BorderBrush="Black" BorderThickness="1" Content="{Binding SettingsFrame}"/>
            </Popup>
            <Popup Grid.ColumnSpan="2" IsOpen="{Binding ElementName=PaintNavItem, Path=IsSelected}" Margin="10"
                   Width="280" Height="50"
                   VerticalAlignment="Bottom" HorizontalAlignment="Center">
                
            </Popup>
        </Grid>
    </Grid>
</Page>
