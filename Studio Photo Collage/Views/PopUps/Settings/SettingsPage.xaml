<Page
    x:Class="Studio_Photo_Collage.Views.PopUps.Settings.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studio_Photo_Collage.Views.PopUps.Settings"
    xmlns:infstruct="using:Studio_Photo_Collage.Infrastructure"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Width="280" Height="350">
    <Page.Resources>
        <infstruct:StringToTypeOfPageConverter x:Key="StringToTypeOfPageConverter"/>
    </Page.Resources>
    
    <StackPanel>

        <muxc:NavigationView x:Name="NavView"
                             PaneDisplayMode="Top" 
                             IsBackButtonVisible="Collapsed" IsBackEnabled="False"
                             IsSettingsVisible="False" Foreground="Red">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="Settings"/>
                <muxc:NavigationViewItem Content="About"/>
            </muxc:NavigationView.MenuItems>
        </muxc:NavigationView>
        
        <Frame Content="{Binding ElementName=NavView, Path=SelectedItem, Converter={StaticResource StringToTypeOfPageConverter}}"/>
    </StackPanel>
</Page>
