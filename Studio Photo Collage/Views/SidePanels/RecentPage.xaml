<Page
    x:Class="Studio_Photo_Collage.Views.SidePanels.RecentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studio_Photo_Collage.Views.SidePanels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
     DataContext="{Binding FiltersPageInstance, Source={StaticResource Locator}}">

    <ScrollViewer>
        <StackPanel Padding="15" Style="{StaticResource SidePanelStackPanel}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource Header}">
                Recent
                </TextBlock>
                <Button Background="Transparent" BorderBrush="Transparent"
                        Padding="0" Margin="7">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8BB;" 
                              FontSize="10" Foreground="Red"/>
                </Button>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
